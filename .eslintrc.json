{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions":
  {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures":
    {
      "experimentalObjectRestSpread": true
    }
  },
  "env":
  {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules":
  {
    "no-console": 1
  }
}
